{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es2017",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true
  },
  "include": ["./src/**/*"],
  "compileOnSave": true
}
