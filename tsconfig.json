{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "compileOnSave": true
}
